{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions for PDF2Markdown",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:window:allow-start-dragging",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "shell:default",
    "shell:allow-open"
  ]
}